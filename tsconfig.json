{
  "compilerOptions": {
    /*"allowSyntheticDefaultImports": true,*/
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "dom",
      "es2016"
    ],
    "module": "es2015",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "types": [ "arcgis-js-api", "googlemaps", "proj4"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "types": [
    "googlemaps",
    "arcgis-js-api"
  ]
}
